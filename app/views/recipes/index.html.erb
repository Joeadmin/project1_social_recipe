<div class="page-header recipe_page_header">  
   <%= link_to 'Create Recipe', new_recipe_path, :class => "pull-right btn btn-default active" %>
    <h3>Recipes</h3>
</div>


<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Cooking time</th>
        <th>Difficulty level</th>
        <th>Food type</th>
        <th>Food preference</th>
        <th>Cuisine</th>
        <th>Ingredients</th>
        <th>Procedure</th>             
      </tr>
    </thead>
    <% if @recipes.blank? %>
      <h3>No records found!</h3>
    <% end %>


    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.title %></td>
          <td><%= recipe.cooking_time %></td>
          <td><%= recipe.difficulty_level %></td>
          <td><%= recipe.food_type.name %> </td>
          <td><%= recipe.food_preference.name %> </td> 
          <td> <%= recipe.cuisine.name %> </td>  
          <td><%= recipe.ingredients %></td>
          <td><%= recipe.procedure %></td>
          <td><%= link_to 'Show', recipe, :class => "btn btn-info" %></td>
          <% if current_user %>
            <td><%= link_to 'Edit', edit_recipe_path(recipe), :class => "btn btn-success" %></td>
            <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>  

          <% end %>        
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

 
</div>
